<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<?import kaminsky.paint.PaintCanvas?>
<GridPane fx:controller="kaminsky.paint.PaintController"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center">

    <PaintCanvas
        fx:id="paintCanvas"
        width="500"
        height="350"
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"/>

    <ColorPicker
            fx:id="colorPicker"
                 onAction="#draw"
                 GridPane.rowIndex="0"
                 GridPane.columnIndex="0"
                 GridPane.valignment="TOP"
                 GridPane.halignment="LEFT"/>

    <Button fx:id="eraserButton"
            text="Eraser"
            onAction="#erase"
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"
            GridPane.valignment="TOP"
            GridPane.halignment="RIGHT"/>

    <Button fx:id="clearButton"
            text="Clear"
            onAction="#clear"
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"
            GridPane.valignment="TOP"
            GridPane.halignment="CENTER"/>

    </GridPane>

